<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start Explicit Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startExplicit" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="94dp"
            android:layout_marginStart="101dp" />
    <Button
            android:text="Start Implicit Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startImplicit" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="178dp"
            android:layout_marginStart="101dp" />
    <Button
            android:text="Send via msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="268dp"
            android:layout_marginStart="101dp"/>
    <Button
            android:text="Open img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="350dp"
            android:layout_marginStart="101dp" />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintVertical_bias="0.661"
            android:layout_marginTop="420dp"
            android:layout_marginStart="10dp" />
</android.support.constraint.ConstraintLayout>